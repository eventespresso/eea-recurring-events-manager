{
	"rootDir": "../../",
	"collectCoverageFrom": [
		"assets/src/**/*.js",
		"!**/node_modules/**",
		"!**/vendor/**",
		"!**/test/**"
	],
	"moduleDirectories": ["node_modules"],
	"moduleNameMapper": {
		"@eventespresso/i18n": "<rootDir>/tests/javascript-config/i18n"
	},
	"preset": "@wordpress/jest-preset-default",
	"testPathIgnorePatterns": [
		"/node_modules/",
		"/test/e2e"
	],
	"transform": {
		"^.+\\.jsx?$": "<rootDir>/tests/javascript-config/babel-transform"
	},
	"testURL": "http://local.wordpress.test"
}
